@page "/Admin-ProductList"
@inject HttpClient httpClient
@layout AdminLayout

<h3 class="mb-4">دسته بندی محصولات</h3>

<div class="card my-3" style="width: 18rem;">
    <img class="card-img-top" src="~/Images/CategoryAdminImages/mobile.jpg" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>

@code {
    public List<CategoryViewModel>? categories { get; set; }

    protected override async Task OnInitializedAsync()
    {
        categories = await httpClient.GetFromJsonAsync<List<CategoryViewModel>>("Category/List");
    }
}
