<!-- Slider-Side -->
<div class="container row slider mx-auto mt-2 p-0">
    <div class="d-none d-lg-block col-6 col-lg-4 h-100 row m-0 p-0">
        <div class="h-50 m-0 p-0">
            <img src="Images/Slider-Images/sliedr-top.jpg" alt="Clothes Online Shop" class="sliderSideImg" title="خرید پوشاک">
        </div>
        <div class="h-50 m-0 p-0">
            <img src="Images/Slider-Images/slider-down.jpg" alt="Book Online Shop" class="sliderSideImg" title="خرید کتاب">
            <div class="carousel-caption bg-black bg-opacity-50 rounded rounded-5">
                <h5><span class="text-success fw-bold">کتاب</span> بخون !</h5>
            </div>
        </div>
    </div>

    <!--------------------------------------------------------------------------------------------------->
    <!-- Slider For Lg Size -->
    <div class="d-none d-lg-block col-12 col-lg-8 h-100 m-0 p-0">
        <div id="slider-lg" class="carousel carousel-fade slide" data-ride="carousel">
            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#slider-lg" data-slide-to="0" class="@SliderImage_1"></li>
                <li data-target="#slider-lg" data-slide-to="1" class="@SliderImage_2"></li>
                <li data-target="#slider-lg" data-slide-to="2" class="@SliderImage_3"></li>
            </ul>
            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item @SliderImage_1">
                    <img src="Images/Slider-Images/Slider1.jpg" alt="mobile Online Shop" class="sliderSideImg" title="خرید تلفن همراه">
                    <div class="carousel-caption bg-black bg-opacity-50 rounded rounded-5 z-1">
                        <h5>خرید گوشی با <span class="text-danger fw-bold">بهترین</span> قیمت</h5>
                    </div>
                </div>
                <div class="carousel-item @SliderImage_2">
                    <img src="Images/Slider-Images/slider2.webp" alt="laptop Online Shop" class="sliderSideImg" title="خرید لپتاپ">
                    <div class="carousel-caption bg-black bg-opacity-50 rounded rounded-5 z-1">
                        <h5>لپتاپ های <span class="text-success fw-bold">متنوع</span></h5>
                    </div>
                </div>
                <div class="carousel-item @SliderImage_3">
                    <img src="Images/Slider-Images/sider3.jpg" alt="Game Online Shop" class="sliderSideImg" title="خرید کنسول بازی">
                    <div class="carousel-caption bg-black bg-opacity-50 rounded rounded-5 z-1">
                        <h5><span class="text-danger fw-bold">جدیدترین</span> کنسول های بازی</h5>
                    </div>
                </div>
            </div>
            <!-- Left and right controls -->
            <NavLink @onclick="()=>ActiveImage('P')" class="carousel-control-prev" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </NavLink>
            <NavLink @onclick="()=>ActiveImage('N')" class="carousel-control-next" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </NavLink>
        </div>
    </div>

    <!--------------------------------------------------------------------------------------------------->
    <!-- Slider For small Size -->
    <div class="d-block d-lg-none col-12 col-lg-8 h-100 m-0 p-0">
        <div id="slider1" class="carousel carousel-fade slide" data-ride="carousel">
            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#slider1" data-slide-to="0" class="@SliderImageSm_1"></li>
                <li data-target="#slider1" data-slide-to="1" class="@SliderImageSm_2"></li>
                <li data-target="#slider1" data-slide-to="2" class="@SliderImageSm_3"></li>
                <li data-target="#slider1" data-slide-to="3" class="@SliderImageSm_4"></li>
                <li data-target="#slider1" data-slide-to="4" class="@SliderImageSm_5"></li>
            </ul>
            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item @SliderImageSm_1">
                    <img src="Images/Slider-Images/Slider1.jpg" alt="mobile Online Shop" class="sliderSideImg" title="خرید تلفن همراه">
                    <div class="carousel-caption bg-black bg-opacity-50 rounded rounded-5 z-1">
                        <h5>خرید گوشی با <span class="text-danger fw-bold">بهترین</span> قیمت</h5>
                    </div>
                </div>
                <div class="carousel-item @SliderImageSm_2">
                    <img src="Images/Slider-Images/slider2.webp" alt="laptop Online Shop" class="sliderSideImg" title="خرید لپتاپ">
                    <div class="carousel-caption bg-black bg-opacity-50 rounded rounded-5 z-1">
                        <h5>لپتاپ های <span class="text-success fw-bold">متنوع</span></h5>
                    </div>
                </div>
                <div class="carousel-item @SliderImageSm_3">
                    <img src="Images/Slider-Images/sider3.jpg" alt="Game Online Shop" class="sliderSideImg" title="خرید کنسول بازی">
                    <div class="carousel-caption bg-black bg-opacity-50 rounded rounded-5 z-1">
                        <h5><span class="text-danger fw-bold">جدیدترین</span> کنسول های بازی</h5>
                    </div>
                </div>
                <div class="carousel-item @SliderImageSm_4">
                    <img src="Images/Slider-Images/sliedr-top.jpg" alt="Clothes Online Shop" class="sliderSideImg" title="خرید پوشاک">
                    <div class="carousel-caption bg-black bg-opacity-50 rounded rounded-5 z-1">
                        <h5><span class="text-primary fw-bold">شیک</span> انتخاب کن</h5>
                    </div>
                </div>
                <div class="carousel-item @SliderImageSm_5">
                    <img src="Images/Slider-Images/slider-down.jpg" alt="Book Online Shop" class="sliderSideImg" title="خرید کتاب">
                    <div class="carousel-caption bg-black bg-opacity-50 rounded rounded-5 z-1">
                        <h5><span class="text-success fw-bold">کتاب</span> بخون !</h5>
                    </div>
                </div>
                <!-- Left and right controls -->
                <NavLink @onclick="()=>ActiveImageSm('P')" class="carousel-control-prev" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </NavLink>
                <NavLink @onclick="()=>ActiveImageSm('N')" class="carousel-control-next" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </NavLink>
            </div>
        </div>
    </div>
</div>
@code {
    public string SliderImage_1 = "active";
    public string SliderImage_2 = "";
    public string SliderImage_3 = "";
    public static int index;

    public string SliderImageSm_1 = "active";
    public string SliderImageSm_2 = "";
    public string SliderImageSm_3 = "";
    public string SliderImageSm_4 = "";
    public string SliderImageSm_5 = "";
    public static int indexSm;

}

@functions {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            index = 1;
            indexSm = 1;
        }
        base.OnAfterRender(firstRender);
    }

    public void ActiveImage(char what)
    {
        if (what == 'N')
        {
            if (index < 3)
            {
                index++;
            }
            else
            {
                index = 1;
            }
        }
        else
        {
            if (index > 1)
            {
                index--;
            }
            else
            {
                index = 3;
            }
        }
        switch (index)
        {
            case 1:
                {
                    SliderImage_1 = "active";
                    SliderImage_2 = "";
                    SliderImage_3 = "";
                    break;
                }
            case 2:
                {
                    SliderImage_1 = "";
                    SliderImage_2 = "active";
                    SliderImage_3 = "";
                    break;
                }
            case 3:
                {
                    SliderImage_1 = "";
                    SliderImage_2 = "";
                    SliderImage_3 = "active";
                    break;
                }
        }
    }

    public void ActiveImageSm(char what)
    {
        if (what == 'N')
        {
            if (indexSm < 5)
            {
                indexSm++;
            }
            else
            {
                indexSm = 1;
            }
        }
        else
        {
            if (indexSm > 1)
            {
                indexSm--;
            }
            else
            {
                indexSm = 5;
            }
        }
        switch (indexSm)
        {
            case 1:
                {
                    SliderImageSm_1 = "active";
                    SliderImageSm_2 = "";
                    SliderImageSm_3 = "";
                    SliderImageSm_4 = "";
                    SliderImageSm_5 = "";
                    break;
                }
            case 2:
                {
                    SliderImageSm_1 = "";
                    SliderImageSm_2 = "active";
                    SliderImageSm_3 = "";
                    SliderImageSm_4 = "";
                    SliderImageSm_5 = "";
                    break;
                }
            case 3:
                {
                    SliderImageSm_1 = "";
                    SliderImageSm_2 = "";
                    SliderImageSm_3 = "active";
                    SliderImageSm_4 = "";
                    SliderImageSm_5 = "";
                    break;
                }
            case 4:
                {
                    SliderImageSm_1 = "";
                    SliderImageSm_2 = "";
                    SliderImageSm_3 = "";
                    SliderImageSm_4 = "active";
                    SliderImageSm_5 = "";
                    break;
                }
            case 5:
                {
                    SliderImageSm_1 = "";
                    SliderImageSm_2 = "";
                    SliderImageSm_3 = "";
                    SliderImageSm_4 = "";
                    SliderImageSm_5 = "active";
                    break;
                }
        }
    }
}
